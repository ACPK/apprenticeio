#!/usr/bin/env sh

# Run this script to deploy the HTML version to Heroku.

set -e

if ! command -v open >/dev/null; then
  open() {
    $BROWSER "$@"
  }
fi

if [ -z "$1" ]; then
  printf "You must provide an environment (staging|production)."
  exit 1
else
  git push "$1" master
  heroku run rake purge --remote "$1"

  if [ "$1" = "staging" ]; then
    open http://staging.apprentice.io
  else
    open http://apprentice.io
  fi
fi
