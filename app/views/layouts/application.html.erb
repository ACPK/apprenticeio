    <script type="text/javascript">
      function workshop_details(workshop) {
        if(workshop.online) {
          return " Online";
        }

        var details = [];
        for (var s=0; s<workshop.active_sections.length; s++) {
          details.push(workshop.active_sections[s].section.city);
        }
        if(details.length > 0) {
          return " in-person in " + details.join(" and ");
        } else {
          return "";
        }
      }
      function workshops(resp) {
        var courses = resp;
        $('#current-workshops .loading').replaceWith('<ul/>');
        $('#current-workshops-footer .loading').replaceWith('<ul/>');
        $ul = $('#current-workshops ul');
        $footer_ul = $('#current-workshops-footer ul');
        for (var i=0; i<courses.length; i++) {
          var c = courses[i]['workshop'];
          var name = c['name'] || null;

          if (name) {
            $ul.append('<li><a href="'+c['url']+'">'+name+workshop_details(c)+'</a></li>');

            if (i<3) {
              $footer_ul.append('<li><a href="'+c['url']+'">'+name+workshop_details(c)+'</a></li>');
            }
          }
        }
      }
    </script>

    <script src="https://learn.thoughtbot.com/workshops.json?callback=workshops" type="text/javascript"></script>
    <script type="text/javascript">
      function tumblr(resp) {
        var posts = resp.posts;
        $('#blog-footer .loading').replaceWith('<ul/>');
        $ul = $('#blog-footer ul');
        for (var i=0; i<3; i++) {
          var p = posts[i];
                      var title = p['regular-title'] || p['link-text'] || null;
          if (title)
            $ul.append('<li><a href="'+p['url']+'">'+title+'</a></li>');
        }
      }
    </script>

