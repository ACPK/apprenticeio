<% content_for :title, 'Velocity iPad App' %>
<% content_for :keyword, 'portfolio' %>
<% content_for :meta_keywords, portfolio_meta_keywords %>
<% content_for :meta_description, portfolio_meta_description %>

<header id="page-header">
  <h2>Velocity iPad App</h2>
  <section class="nav">
    <a class="left" href="/portfolio/fanboat" title="Fanboat">&larr; Fanboat</a>
    <a class="right" href="/portfolio/owneraide" title="Owneraide">Owneraide &rarr;</a>
  </section>
</header>

<blockquote class="summary">
  <div>
    <p>A mobile survey application for remote events.</p>
  </div>
</blockquote>

<section class="primary">
  <section class="screenshots">
    <section class="case">
      <a class="jump" href="#screenshots">Jump to screenshots</a>
      <section class="problem">
        <h4>The Problem</h4>
        <p>Vertical Performance Partners, a provider of mobile learning tools for sales teams, approached thoughtbot with a challenge to build a mobile learning and survey application, for real time events, on a short schedule.</p>
      </section>
      <section class="solution">
        <h4>The Solution</h4>
        <p>We were able to create an HTML-based mobile application which runs on iPads, and is used in real-time at sales learning events.  VPP's clients are able to maximize the return on their sales training by analyzing results in real time, and improving sales team performance as a result.</p>
      </section>
    </section>
    <section id="screenshots">
      <%= link_to image_path('portfolio/velocity/dashboard.png') do %>
        <%= image_tag 'portfolio/velocity/dashboard.png', class: :screenshot, alt: 'Velocity dashboard' %>
      <% end %>
      <%= link_to image_path('portfolio/velocity/quiz.png') do %>
        <%= image_tag 'portfolio/velocity/quiz.png', class: :screenshot, alt: 'Velocity quiz' %>
      <% end %>
      <%= link_to image_path('portfolio/velocity/sliders.png') do %>
        <%= image_tag 'portfolio/velocity/sliders.png', class: :screenshot, alt: 'Velocity quiz sliders' %>
      <% end %>
      <%= link_to image_path('portfolio/velocity/remote-browse.png') do %>
        <%= image_tag 'portfolio/velocity/remote-browse.png', class: :screenshot, alt: 'Velocity remote browse' %>
      <% end %>
      <%= link_to image_path('portfolio/velocity/remote-search.png') do %>
        <%= image_tag 'portfolio/velocity/remote-search.png', class: :screenshot, alt: 'Velocity remote search' %>
      <% end %>
    </section>
  </section>

  <%= render 'pages/portfolio/get_started' %>
</section>
